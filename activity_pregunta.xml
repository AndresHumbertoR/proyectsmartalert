<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorFondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvProgreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/10"
            android:textColor="@color/colorTexto"
            android:textSize="16sp"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/imagenPregunta"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:contentDescription="@string/desc_imagen"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/textoPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorTexto"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp"/>

        <RadioGroup
            android:id="@+id/opcionesGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <!-- Las opciones se generan dinÃ¡micamente desde Java -->
        </RadioGroup>

        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/siguiente"
            android:backgroundTint="@color/colorPrimario"
            android:textColor="@color/colorTextoClaro"
            android:layout_gravity="end"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"/>

    </LinearLayout>
</ScrollView>