<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/colorFondo">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_felicitaciones"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/esc_imagen_final"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/felicidades"
        android:textSize="22sp"
        android:textColor="@color/colorTexto"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="10/10 respuestas correctas"
        android:textColor="@color/colorTexto"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/volver_inicio"
        android:backgroundTint="@color/colorPrimario"
        android:textColor="@color/colorTextoClaro"
        android:paddingHorizontal="32dp"
        android:paddingVertical="16dp"/>

</LinearLayout>