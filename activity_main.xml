<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/colorFondo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/escoja_una_opcion"
        android:textColor="@color/colorTexto"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnCuestionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cuestionario_btn"
        android:backgroundTint="@color/colorPrimario"
        android:textColor="@color/colorTextoClaro"
        android:layout_marginBottom="16dp"
        android:padding="16dp"/>

    <Button
        android:id="@+id/btnOtroPrograma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/otro_programa_btn"
        android:backgroundTint="@color/colorSecundario"
        android:textColor="@color/colorTextoClaro"
        android:padding="16dp"/>

</LinearLayout>